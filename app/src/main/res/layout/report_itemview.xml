<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/scenery"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/scenery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="3sp"
        android:shadowColor="@color/colorShadows"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:textColor="@color/colorText2"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="너무 이뻐요 누나아아" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3sp"
        android:shadowColor="@color/colorShadows"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:textColor="@color/colorText2"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="2018.06.02" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorShadows"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:text="박진영"
        android:textSize="13sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/scenery"
        app:layout_constraintTop_toBottomOf="@id/day"/>

    <ImageView
        android:id="@+id/peopleIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/people"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/peopleNum"
        app:layout_constraintRight_toLeftOf="@id/peopleNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <TextView
        android:id="@+id/peopleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />


</android.support.constraint.ConstraintLayout>
