<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    

        <ImageView
            android:id="@+id/Profile"
            android:background="@drawable/picture_round_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorShadows"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:textSize="15sp"
            android:textColor="@color/colorText2"
            android:lineSpacingExtra="3sp"
            tools:text="아이유 의원"
            app:layout_constraintStart_toEndOf="@id/Profile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorShadows"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:textSize="11sp"
            android:textColor="@color/colorText2"
            android:lineSpacingExtra="3sp"
            tools:text="대전광역시 유성구 시의원"
            app:layout_constraintStart_toEndOf="@id/Profile"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorShadows"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:textSize="13sp"
            android:text="2018.06.14 ~ 2022.06.01"
            app:layout_constraintTop_toBottomOf="@id/adress"
            app:layout_constraintStart_toEndOf="@id/Profile"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"/>

        <ImageView
            android:id="@+id/fireicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/fire"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/firenumber"/>

        <TextView
            android:id="@+id/firenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="121"
            app:layout_constraintRight_toLeftOf="@id/peopleicon"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/peopleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/people"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/peoplenumber"/>

        <TextView
            android:id="@+id/peoplenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"/>


    </android.support.constraint.ConstraintLayout>
