<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/circle_black"
        card_view:layout_constraintBottom_toBottomOf="@id/textView7"
        card_view:layout_constraintLeft_toLeftOf="@id/textView7"
        card_view:layout_constraintRight_toRightOf="@id/textView7"
        card_view:layout_constraintTop_toTopOf="@id/textView7" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView7" />

    <CalendarView
        android:id="@+id/calender"
        android:layout_width="353dp"
        android:layout_height="352dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffff"
        android:onClick="onClick_calender"
        android:src="@drawable/calendar"
        app:layout_constraintEnd_toStartOf="@+id/btn1" />

    <ImageButton
        android:onClick="onClick"
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffff"
        android:src="@drawable/person"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>